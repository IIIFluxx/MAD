<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ansOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:background="#B8B5B5"
        android:textColor="@android:color/black"
        android:maxLines="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ansTwo"
        app:layout_constraintBottom_toTopOf="@id/ansThree"
        app:layout_constraintTop_toTopOf="@id/questionText"
        tools:layout_editor_absoluteY="286dp" />

    <Button
        android:id="@+id/ansTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:background="#B8B5B5"
        android:textColor="@android:color/black"
        android:maxLines="2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ansOne"
        app:layout_constraintBottom_toTopOf="@id/ansFour"
        app:layout_constraintTop_toTopOf="@id/questionText"
        tools:layout_editor_absoluteY="286dp" />

    <Button
        android:id="@+id/ansThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:background="#B8B5B5"
        android:textColor="@android:color/black"
        android:maxLines="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ansFour"
        app:layout_constraintTop_toTopOf="@id/ansOne"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="458dp" />

    <Button
        android:id="@+id/ansFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:background="#B8B5B5"
        android:textColor="@android:color/black"
        android:maxLines="2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ansThree"
        app:layout_constraintTop_toTopOf="@id/ansTwo"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="459dp" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="Question"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/ansTwo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>